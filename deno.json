{
  "name": "@sumbricht/json-class-serializer",
  "version": "0.2.1",
  "license": "MIT",
  "exports": {
    ".": "./src/mod.ts"
  },
  "imports": {
    "@luca/esbuild-deno-loader": "jsr:@luca/esbuild-deno-loader@^0.11.1",
    "@rollup/plugin-typescript": "npm:@rollup/plugin-typescript@^12.1.2",
    "@std/assert": "jsr:@std/assert@1",
    "esbuild": "npm:esbuild@^0.25.0",
    "tslib": "npm:tslib@^2.8.1"
  },
  "tasks": {
    "build": {
      "description": "Build the project to .js and .d.ts files",
      "command": "node_modules/.bin/tsup src/mod.ts src/server.ts --format esm,cjs --dts"
    },
    "build_old": {
      "description": "Build the project to .js and .d.ts files",
      "command": "rm -rf dist && npx rolldown -c build/rolldown.config.mjs && npx rollup -c build/rollup.config.js && rm -rf dist/declarations"
    }
  },
  "publish": {
    "include": [
      "./src",
      "./deno*",
      "./LICENSE",
      "./README.md"
    ]
  },
  "compilerOptions": {
    "experimentalDecorators": true
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  }
}
